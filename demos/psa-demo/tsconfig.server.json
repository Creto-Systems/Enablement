{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "noEmit": false,
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node"
  },
  "include": ["src/server/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "src/client"]
}
