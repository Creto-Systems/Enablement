# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/psa_demo

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Creto-Metering Integration
CRETO_METERING_API_URL=https://api.creto.io/v1/metering
CRETO_METERING_API_KEY=your-metering-api-key

# Creto-Runtime Integration
CRETO_RUNTIME_API_URL=https://api.creto.io/v1/runtime
CRETO_RUNTIME_API_KEY=your-runtime-api-key

# Email (optional for demo)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password

# Feature Flags
ENABLE_AUTO_APPROVAL=true
ENABLE_METERING=true
ENABLE_SANDBOX_EXECUTION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
