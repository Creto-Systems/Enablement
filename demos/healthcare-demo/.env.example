# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/healthcare_demo
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=900

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h
ENCRYPTION_MASTER_KEY=your-encryption-key-minimum-32-characters
ENCRYPTION_SALT=your-base64-encoded-salt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# External APIs (Optional)
MEDICAL_KB_API_URL=https://api.example.com/medical-knowledge
DRUG_INTERACTION_API_URL=https://api.example.com/interactions
HL7_FHIR_ENDPOINT=https://fhir.example.com/r4

# Logging
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555

# Feature Flags
ENABLE_AI_SUGGESTIONS=true
ENABLE_CRETO_OVERSIGHT=true
REQUIRE_MFA=false
