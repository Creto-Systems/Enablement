{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client", "@testing-library/jest-dom"],
    "noEmit": true
  },
  "include": [
    "src/client/**/*",
    "src/shared/**/*",
    "tests/**/*"
  ],
  "exclude": ["src/server"]
}
